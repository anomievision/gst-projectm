{
    "configurations": [
        {
            "name": "Win32",
            "includePath": [
                "${workspaceFolder}/**",
                "${env:VCPKG_ROOT}/installed/x64-windows/include",
                "${env:VCPKG_ROOT}/installed/x64-windows/include/gstreamer-1.0",
                "${env:VCPKG_ROOT}/installed/x64-windows/include/glib-2.0",
                "${env:PROJECTM_ROOT}/include"
            ],
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE"
            ],
            "windowsSdkVersion": "10.0.22000.0",
            "compilerPath": "cl.exe",
            "cStandard": "c17",
            "cppStandard": "c++17",
            "intelliSenseMode": "windows-msvc-x64"
        },
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/**",
                "/usr/include",
                "/usr/include/gstreamer-1.0",
                "/usr/lib/gstreamer-1.0/include", // for gstglconfig.h (Linux)
                "/usr/include/glib-2.0",
                "/usr/lib64/glib-2.0/include/", // for glibconfig.h (Linux)
                "/usr/lib/x86_64-linux-gnu/glib-2.0/include", // for glibconfig.h (WSL)
                "${env:PROJECTM_ROOT}/include"
            ],
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE"
            ],
            "compilerPath": "/usr/bin/gcc",
            "cStandard": "c17",
            "cppStandard": "c++17",
            "intelliSenseMode": "linux-gcc-x64"
        }
    ],
    "version": 4
}